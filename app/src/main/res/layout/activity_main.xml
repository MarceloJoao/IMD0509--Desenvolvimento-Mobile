<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_menu_imd"
        android:layout_width="432dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="IMDMARKET"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ed_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:text="O que deseja fazer?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_menu_imd" />

    <Button
        android:id="@+id/bt_cadastro"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="17dp"
        android:text="Cadastrar Produto"
        app:layout_constraintBottom_toTopOf="@+id/bt_alterar"
        app:layout_constraintEnd_toStartOf="@+id/bt_listar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_menu" />

    <Button
        android:id="@+id/bt_listar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="55dp"
        android:text="Listar Produtos"
        app:layout_constraintBottom_toBottomOf="@+id/bt_cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_cadastro"
        app:layout_constraintTop_toTopOf="@+id/bt_cadastro" />

    <Button
        android:id="@+id/bt_alterar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="322dp"
        android:text="Alterar Produto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_deletar_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_cadastro" />

    <Button
        android:id="@+id/bt_deletar_menu"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="55dp"
        android:text="Deletar Produto"
        app:layout_constraintBottom_toBottomOf="@+id/bt_alterar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_alterar"
        app:layout_constraintTop_toTopOf="@+id/bt_alterar" />

</androidx.constraintlayout.widget.ConstraintLayout>